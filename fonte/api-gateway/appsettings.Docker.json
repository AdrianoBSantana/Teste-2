{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Emissor": "PlataformaEcommerce",
    "Audiencia": "PlataformaEcommerceClientes",
    "Chave": "chave-super-secreta-para-dev-1234567890",
    "ExpiracaoMinutos": 60
  },
  "ReverseProxy": {
    "Routes": {
      "estoque-route": {
        "ClusterId": "estoque-cluster",
        "Match": { "Path": "/estoque/{**catch-all}" }
      },
      "vendas-route": {
        "ClusterId": "vendas-cluster",
        "Match": { "Path": "/vendas/{**catch-all}" }
      }
    },
    "Clusters": {
      "estoque-cluster": {
        "Destinations": { "dest1": { "Address": "http://servico-estoque:8080/" } }
      },
      "vendas-cluster": {
        "Destinations": { "dest1": { "Address": "http://servico-vendas:8080/" } }
      }
    }
  }
}
