{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Emissor": "PlataformaEcommerce",
    "Audiencia": "PlataformaEcommerceClientes",
    "Chave": "chave-super-secreta-para-dev-1234567890",
    "ExpiracaoMinutos": 60
  },
  "ReverseProxy": {
    "Routes": {
      "estoque-route": {
        "ClusterId": "estoque-cluster",
        "Match": {
          "Path": "/estoque/{**catch-all}"
        }
      },
      "vendas-route": {
        "ClusterId": "vendas-cluster",
        "Match": {
          "Path": "/vendas/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "estoque-cluster": {
        "Destinations": {
          "dest1": {
            "Address": "http://localhost:5290/"
          }
        }
      },
      "vendas-cluster": {
        "Destinations": {
          "dest1": {
            "Address": "http://localhost:5156/"
          }
        }
      }
    }
  }
}
